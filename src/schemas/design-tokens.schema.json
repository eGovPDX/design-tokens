{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Design Tokens Schema",
  "type": "object",
  "properties": {
    "global": {
      "type": "object"
    },
    "USWDS Theme/Project theme": {
      "type": "object",
      "required": ["#-theme"],
      "properties": {
        "#-theme": {
          "type": "object",
          "required": ["color"],
          "properties": {
            "color": {
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "additionalProperties": {
                  "type": "object",
                  "properties": {
                    "value": {
                      "type": "string"
                    },
                    "type": {
                      "type": "string",
                      "enum": ["color"]
                    }
                  },
                  "required": ["value", "type"]
                }
              }
            },
            "typography": {
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "properties": {
                  "value": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string",
                    "enum": ["typography"]
                  }
                },
                "required": ["value", "type"]
              }
            },
            "spacing": {
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "properties": {
                  "value": {
                    "type": ["string", "number"]
                  },
                  "type": {
                    "type": "string",
                    "enum": ["spacing"]
                  }
                },
                "required": ["value", "type"]
              }
            }
          }
        }
      }
    }
  },
  "required": ["USWDS Theme/Project theme"]
} 